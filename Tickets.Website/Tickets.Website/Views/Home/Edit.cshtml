@model Tickets.Website.Areas.Identity.Data.Person
@{
    ViewData["Title"] = "PassengerInfo";
    Layout = "~/Views/Shared/_PassengersLayout.cshtml";
}

<!DOCTYPE html>

<html>
<body>
    <div class="col-md-10">
        <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="Lastname" class="control-label">Lastname</label>
                <input type="text" asp-for="Lastname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label">Firstname</label>
                <input type="text" asp-for="Firstname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label">Patronymic</label>
                <input type="text" asp-for="Patronymic" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Birthday</label>
                <input type="date" asp-for="Birthday" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PassportNum" class="control-label">Passport number</label>
                <input type="text" asp-for="PassportNum" class="form-control" />
            </div>
            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <button type="submit" class="mybtn">Save</button>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id">
                                <button type="button" class="mybtn">Delete</button>
                            </a>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>

