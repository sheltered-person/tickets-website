@using Microsoft.AspNetCore.Identity
@using Tickets.Website.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav" id="login-ul">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage profile</a>
        </li>
        <li class="nav-item">
            <a id="tickets" class="nav-link text-dark" asp-area="Identity" asp-controller="Home" asp-action="CurrentTickets">Tickets</a>
        </li>
        <li class="nav-item">
            <a id="passengers" class="nav-link text-dark" asp-area="Identity" asp-controller="Home" asp-action="Passengers">Passengers</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
